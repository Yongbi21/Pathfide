<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/notificationCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/decline"
                android:layout_marginTop="7dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rebookLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rebooked"
                    android:textColor="@color/orange"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/notificationTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Appointment Declined"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/darkblue" />

                <TextView
                    android:id="@+id/notificationMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello, Mark Rax, we regret to inform you that your appointment on 12/12/2020 at 1:00 PM has been declined. We encourage you to explore other professionals available for booking or try to book with the same therapist with different date and timeslot."
                    android:textSize="13sp"
                    android:paddingTop="5dp"
                    android:textColor="@color/darkblue" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
