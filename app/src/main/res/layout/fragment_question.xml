<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Get Assessed Text -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114">

        <!-- Get Assessed Text -->
        <TextView
            android:id="@+id/getAssessedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Get Assessed"
            android:textColor="@color/navy_blue"
            android:textSize="30sp" />

        <!-- Info Icon -->
        <ImageView
            android:id="@+id/infoIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:contentDescription="Info Icon"
            android:src="@drawable/info"
            />
    </LinearLayout>


    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_height="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:max="105"
        android:progress="15"
        android:progressDrawable="@drawable/custom_progressbar"
        android:progressTint="@color/progress_blue"
        app:layout_constraintBottom_toTopOf="@+id/answerLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.873">

    </ProgressBar>

    <!-- Radio Group Answers -->
    <RadioGroup
        android:id="@+id/answerLayout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.452">

        <RadioButton
            android:id="@+id/btnVeryGood"
            style="@style/CustomRadioButton"
            android:text="Never" />

        <RadioButton
            android:id="@+id/btnGood"
            style="@style/CustomRadioButton"
            android:text="Rarely" />

        <RadioButton
            android:id="@+id/btnNeutral"
            style="@style/CustomRadioButton"
            android:text="Sometimes" />

        <RadioButton
            android:id="@+id/btnBad"
            style="@style/CustomRadioButton"
            android:text="Often" />

        <RadioButton
            android:id="@+id/btnVeryBad"
            style="@style/CustomRadioButton"
            android:text="Always" />

    </RadioGroup>

    <!-- Question Box -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/getAssessedTitle"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/getAssessedTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.231">

        <!-- Question -->
        <TextView
            android:id="@+id/cardTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_bold"
            android:text="How have you been feeling over the past few weeks?"
            android:textAlignment="center"
            android:textColor="@color/navy_blue"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
