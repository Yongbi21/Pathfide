<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#88A7D4"
                android:startColor="#D0E4F6"
                android:type="linear" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="0"
                android:endColor="#649EBE"
                android:startColor="#80D9FF"
                android:type="linear" />
        </shape>
    </item>
</selector>
